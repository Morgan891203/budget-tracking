// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL") // Used by Prisma Client for the running application
  directUrl = env("POSTGRES_URL")    // Used by Prisma Migrate for deployments
}

model Salary {
  id        String   @id @default(cuid())
  amount    Decimal
  source    String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @default(cuid())
  amount      Decimal
  description String
  category    String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Debt {
  id          String   @id @default(cuid())
  person      String
  description String
  amount      Decimal
  type        String   // "iOwe" or "theyOwe"
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
